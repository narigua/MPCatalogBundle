{% extends "MPCatalogBundle::adminbase.html.twig" %}

{% block breadcrumb %}
    {% include "MPCatalogBundle::breadcrumb.html.twig" with { "items": {
        "ProductOwner List": ""
    }} %}
{% endblock %}

{% block content %}

{{ parent() }}

<div class="page-header">
    <h1>{% trans %}ProductOwner List{% endtrans %}</h1>
</div>

<p>
    {{ pagerfanta(pager, 'twitter_bootstrap') }}
</p>

<ul class="list_actions">
    <li>
        <a class="btn btn-primary" href="{{ path('admin_productowner_new') }}">
            {% trans %}Create a new entry{% endtrans %}
        </a>
    </li>
</ul>

<table class="table table-bordered table-striped table-condensed records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Postcode</th>
            <th>City</th>
            <th>Country</th>
            <th>Phone</th>
            <th>Mail</th>
            <th>Ownerclass</th>
            <th>Ownerid</th>
            <th>Ownerhash</th>
            <th colspan="3">{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pager.currentPageResults %}
        <tr>
            <td><a href="{{ path('admin_productowner_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.address }}</td>
            <td>{{ entity.postCode }}</td>
            <td>{{ entity.city }}</td>
            <td>{{ entity.country }}</td>
            <td>{{ entity.phone }}</td>
            <td>{{ entity.mail }}</td>
            <td>{{ entity.ownerClass }}</td>
            <td>{{ entity.ownerId }}</td>
            <td>{{ entity.ownerHash }}</td>
        <td>
                    <a class="btn btn-block" href="{{ path('admin_productowner_show', { 'id': entity.id }) }}">{% trans %}show{% endtrans %}</a>
                </td>
        <td>
                    <a class="btn btn-block btn-primary" href="{{ path('admin_productowner_edit', { 'id': entity.id }) }}">{% trans %}edit{% endtrans %}</a>
                </td>
        <td>
                    {% render 'MPCatalogBundle:ProductOwner:deleteForm' with { 'id': entity.id } %}
                </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="list_actions">
    <li>
        <a class="btn btn-primary" href="{{ path('admin_productowner_new') }}">
            {% trans %}Create a new entry{% endtrans %}
        </a>
    </li>
</ul>
{% endblock %}
